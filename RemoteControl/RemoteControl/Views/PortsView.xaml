<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteControl.Views.PortsView">
  <ContentView.Content>
      <StackLayout>
            <Label x:Name="LblPort" Style="{StaticResource Label8}" Text="{Binding UsbPorts}" LineBreakMode="CharacterWrap"/>
            <Label x:Name="LblPacketCounter" Style="{StaticResource Label8}" Text="{Binding PacketCounter}" LineBreakMode="CharacterWrap"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>