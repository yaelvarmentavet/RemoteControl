                </StackLayout>-->


                <!--<Image x:Name="ImgPulsesYes" Grid.Column="6" Scale="1" Style="{StaticResource IconBottom}" Source="{resources:ImageResource RemoteControl.Icons.ap_clean.bmp}" IsVisible="{Binding RemainingOK}"/>
