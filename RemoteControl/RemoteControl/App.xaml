<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteControl.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BackgroundDark">Gray</Color>
            <Color x:Key="BackgroundLight">White</Color>
            <Style x:Key="ButtonLarge" TargetType="Button">
                <Setter Property="WidthRequest" Value="190"/>
                <Setter Property="HeightRequest" Value="130"/>
                <Setter Property="Margin" Value="10,20,10,20"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
            <Style x:Key="FrameDark" TargetType="Frame">
                <Setter Property="Margin" Value="10,0,10,0"/>
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
            </Style>
            <Style x:Key="FrameLight" TargetType="Frame">
                <Setter Property="Margin" Value="10,0,10,0"/>
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
            </Style>
            <Style x:Key="IconFrame" TargetType="Image">
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}"/>
                <Setter Property="Margin" Value="10,0,10,0"/>
            </Style>
            <Style x:Key="LabelTitle" TargetType="Label">
                <Setter Property="FontSize" Value="Title"/>
                <Setter Property="Margin" Value="0,30,0,30"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="LabelSmall" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>